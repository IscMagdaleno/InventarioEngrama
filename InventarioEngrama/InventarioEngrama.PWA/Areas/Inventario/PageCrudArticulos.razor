@using InventarioEngrama.PWA.Areas.Inventario.Componentes
@using InventarioEngrama.PWA.Shared.Common
@inherits EngramaPage

@page "/PageCrudArticulos"


<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Articulos</MudText>
		</CardHeaderContent>

	</MudCardHeader>
	<MudCardContent>
        <MudExpansionPanels MultiExpansion="true" >
            <MudExpansionPanel Text="Formulario" Expanded="ShowForm">
                <FormArticulos Data="Data" OnDataSaved="OnDataSaved"></FormArticulos>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Lista Articulos" Expanded="true">
                <TablaArticulos Data="Data" OnArticuloSelected="OnArticuloSelected"></TablaArticulos>
            </MudExpansionPanel>
           
        </MudExpansionPanels>
	</MudCardContent>
</MudCard>