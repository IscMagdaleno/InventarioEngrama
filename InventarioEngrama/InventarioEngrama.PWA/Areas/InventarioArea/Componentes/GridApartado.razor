
@inherits EngramaComponent
<MudGrid>
	@if (ShowApartadoDetalle.False())
	{

		<MudItem sm="12">
			<FormApartado Data="@Data" EC_ApartadoFilled="EC_ApartadoFilled" />
		</MudItem>

	}
	else
	{

		<MudItem sm="6">
			<CardApatado Apartado="@Data.ApartadoSelected"></CardApatado>
		</MudItem>
		<MudItem sm="6">
			@if (Data.ArticuloSelected.iIdArticulo <= 0)
			{

				<TablaInventario Data="@Data" ShowSeleccionar="true" OnArticuloSelected="OnArticuloSelected"></TablaInventario>
			}
			else
			{
				<GridSeleccionArticulo Data="Data" OnProductSaved="OnVentaSaved"></GridSeleccionArticulo>

			}

		</MudItem>
		<MudItem sm="12">
			<TablaArticuloApartado ArticulosApartados="Data.ApartadoSelected.ArticulosApartados"></TablaArticuloApartado>
		</MudItem>
		<MudItem sm="12">
			<MudButton Variant="Variant.Filled"
					   Color="Color.Success"
					   OnClick="OnClickGuradarApartado">
				Guardar Apartado de Artículos
			</MudButton>
		</MudItem>
	}
</MudGrid>