@inherits EngramaComponent
<MudGrid>
	@if (ShowApartadoDetalle.False())
	{

		<MudItem sm="12">
			<FormApartado Data="@Data" EC_ApartadoFilled="EC_ApartadoFilled" />
		</MudItem>

	}
	else
	{

		<MudItem sm="6" xs="12">
			<CardApatado Apartado="@Data.ApartadoSelected"></CardApatado>
		</MudItem>
		<MudItem sm="6" xs="12">
			@if (Data.ArticuloSelected.iIdArticulo <= 0)
			{

				<TablaInventario Data="@Data" ShowSeleccionar="true" OnArticuloSelected="OnArticuloSelected"></TablaInventario>
			}
			else
			{
				<GridSeleccionArticulo Data="Data" OnProductSaved="OnVentaSaved" OnCancelVenta="OnCancelVenta"></GridSeleccionArticulo>

			}

		</MudItem>
		@if (Data.ApartadoSelected.ArticulosApartados.NotEmpty())
		{
			<MudItem sm="12">
				<TablaArticuloApartado ArticulosApartados="Data.ApartadoSelected.ArticulosApartados"
									   EC_EliminarArticuloApartado="EC_EliminarArticuloApartado"
									   ShowDelete="true">
				</TablaArticuloApartado>
			</MudItem>
			<MudItem sm="12">
				<MudButton Variant="Variant.Filled"
						   Color="Color.Success"
						   OnClick="OnClickGuradarApartado">
					Guardar Apartado de Artículos
				</MudButton>
			</MudItem>
		}
	}
</MudGrid>