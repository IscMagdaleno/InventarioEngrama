@inherits EngramaComponent


<MudGrid>
	@foreach (var item in Data.LstPedidos)
	{
		<MudItem xs="12" sm="4">

			<MudCard>
				<MudCardHeader>
					<CardHeaderContent>
						<MudText Typo="Typo.h6" Color="Color.Primary">@item.Proveedor.nvchNombre</MudText>
					</CardHeaderContent>
					<CardHeaderActions>
						<MudFab StartIcon="@Icons.Material.Filled.Edit" OnClick="@(()=>OnClickEditarPedido(item))" />
					</CardHeaderActions>
				</MudCardHeader>
				<MudCardContent>
					<MudText>@item.dtFecha</MudText>
				</MudCardContent>
				<MudCardActions>
					<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(()=>OnClickPedidoSelected(item))">Abrir</MudButton>
				</MudCardActions>
			</MudCard>
		</MudItem>
	}
</MudGrid>