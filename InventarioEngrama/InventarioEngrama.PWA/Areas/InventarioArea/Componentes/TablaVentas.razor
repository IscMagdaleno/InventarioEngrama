@using InventarioEngrama.Share.Objetos.Inventario
@inherits EngramaComponent

@if (Data.LstVentas.Any())
{
	<MudTable Items="@Data.LstVentas"
			  T="@Venta"
			  Dense="@true"
			  Hover="true"
			  Filter="new Func<Venta,bool>(FilterFunc1)">
		<ToolBarContent>
			<MudText Typo="Typo.h6">Tabla de Venta</MudText>
			<MudSpacer />
			<MudTextField @bind-Value="searchStringFiltro"
						  Placeholder="Buscar..."
						  Adornment="Adornment.Start"
						  AdornmentIcon="@Icons.Material.Filled.Search"
						  IconSize="Size.Medium"
						  Class="mt-0">
			</MudTextField>
		</ToolBarContent>
		<HeaderContent>
			<MudTh>Nombre</MudTh>
			<MudTh>Descripción</MudTh>
			<MudTh>Cantidad</MudTh>
			<MudTh>Precio Final</MudTh>
			<MudTh>Fecha Venta</MudTh>
			<MudTh>Referencia</MudTh>

		</HeaderContent>
		<RowTemplate>

			<MudTd DataLabel="Nombre">@context.Articulo.nvchNombre</MudTd>
			<MudTd DataLabel="Descripción">@context.Articulo.nvchDescripcion</MudTd>
			<MudTd DataLabel="Cantidad">@context.iCantidad</MudTd>
			<MudTd DataLabel="Precio Final">@context.mPrecioFinal.ToString("C2")</MudTd>
			<MudTd DataLabel="Fecha Venta">@context.dtFechaVenta</MudTd>
			<MudTd DataLabel="Referencia">@context.vchReferenciaVenta</MudTd>

		</RowTemplate>
		<PagerContent>
			<MudTablePager />
		</PagerContent>
	</MudTable>
}
@code {
	private string searchStringFiltro = "";
	private bool FilterFunc1(Venta element) => FilterFunc(element, searchStringFiltro);
	private bool FilterFunc(Venta element, string searchString)
	{
		if (string.IsNullOrWhiteSpace(searchString))
			return true;
		if (element.Articulo.nvchNombre.Contains(searchString, StringComparison.OrdinalIgnoreCase)) // Agrega el campo por el caul realizar el filtro
			return true;
		return false;
	}
}
