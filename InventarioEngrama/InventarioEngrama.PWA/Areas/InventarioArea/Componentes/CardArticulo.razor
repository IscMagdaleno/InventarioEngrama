@using InventarioEngrama.Share.Objetos.Inventario
<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h4" Color="Color.Primary">@Articulo.nvchNombre</MudText>
			<MudText Typo="Typo.subtitle1" >@Articulo.nvchDescripcion</MudText>
		</CardHeaderContent>
	</MudCardHeader>

	<MudCardContent>
		<MudGrid>
			<MudItem sm="6" xs="12">
				<MudText Typo="Typo.body2" Color="Color.Secondary">Precio Compra</MudText>
				<MudText Typo="Typo.h6" Color="Color.Error">@Articulo.mPrecioCompra.ToString("C")</MudText>
			</MudItem>
			<MudItem sm="6" xs="12">
				<MudText Typo="Typo.body2" Color="Color.Success">Precio Venta</MudText>
				<MudText Typo="Typo.h6" Color="Color.Success">@Articulo.mPrecioVenta.ToString("C")</MudText>
			</MudItem>
		</MudGrid>
	</MudCardContent>

</MudCard>
@code {

	[Parameter] public Articulo Articulo { get; set; }

}