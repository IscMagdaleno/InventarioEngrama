@using InventarioEngrama.PWA.Shared.Common
@using InventarioEngrama.Share.Objetos.Inventario

@inherits EngramaComponent

<MudCard>

	<EditForm Model="@Data.ArticuloSelected"
			  OnValidSubmit="OnSubmint">
		<DataAnnotationsValidator />

		<MudFocusTrap>

			<MudGrid>
				<MudItem sm="6">
					<MudSelect T="Proveedor"
							   Label="Proveedor"
							   @bind-Value="Data.ArticuloSelected.Proveedor"
							   Dense="true"
							   Disabled="DisableProveedor"
							   Variant="Variant.Outlined">
						@foreach (var p in Data.LstProveedores)
						{
							<MudSelectItem Value="@p">
							</MudSelectItem>
						}
					</MudSelect>
				</MudItem>
				<MudItem sm="6">
					<MudTextField @bind-Value="@Data.ArticuloSelected.nvchNombre"
								  Label="Nombre"
								  MaxLength="200"
								  Variant="Variant.Outlined" />

				</MudItem>
				<MudItem sm="6">
					<MudNumericField @bind-Value="Data.ArticuloSelected.mPrecioCompra"
									 Label="Precio de Compra"
									 Variant="Variant.Outlined" />

				</MudItem>
				<MudItem sm="6">
					<MudNumericField @bind-Value="Data.ArticuloSelected.mPrecioVenta"
									 Label="Precio de Venta"
									 Variant="Variant.Outlined" />


				</MudItem>
				<MudItem sm="6">

					<MudNumericField @bind-Value="Data.ArticuloSelected.smCantidad"
									 Label="Cantidad en Inventario"
									 Variant="Variant.Outlined" />

				</MudItem>
				<MudItem sm="6">
					<MudTextField @bind-Value="@Data.ArticuloSelected.nvchDescripcion"
								  Label="Descripción"
								  MaxLength="50"
								  Variant="Variant.Outlined" />


				</MudItem>

				<MudItem sm="12">
					<MudButton Variant="Variant.Filled"
							   ButtonType="ButtonType.Submit"
							   Color="Color.Success">Guardar Articulo</MudButton>
				</MudItem>


			</MudGrid>
		</MudFocusTrap>
	</EditForm>


</MudCard>