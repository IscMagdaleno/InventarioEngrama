@using InventarioEngrama.PWA.Areas.InventarioArea.Componentes
@using InventarioEngrama.PWA.Shared.Common
@inherits EngramaPage



@page "/PageCrudProvedor"


<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Provedores</MudText>
		</CardHeaderContent>

	</MudCardHeader>
	<MudCardContent>
        <MudExpansionPanels MultiExpansion="true" >
            <MudExpansionPanel Text="Formulario" Expanded="@ShowForm" Class="fondo-background">
                <FormProvedores Data="Data" OnSaveProvedor="OnDataSaved"></FormProvedores>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Lista Provedores" Expanded="true" Class="fondo-background">
                <TableProvedor Data="Data" OnProveedorSelected="OnProveedorSelected"></TableProvedor>
            </MudExpansionPanel>
           
        </MudExpansionPanels>
	</MudCardContent>
</MudCard>