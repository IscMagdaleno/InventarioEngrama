@using InventarioEngrama.PWA.Areas.InventarioArea.Componentes
@using InventarioEngrama.PWA.Shared.Common
@inherits EngramaPage

@page "/PageCrudArticulos"


<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Artículos</MudText>
		</CardHeaderContent>

	</MudCardHeader>
	<MudCardContent>
        <MudExpansionPanels MultiExpansion="true" >
            <MudExpansionPanel Text="Formulario" Expanded="ShowForm" Class="fondo-background">
                <FormArticulos Data="Data" OnDataSaved="OnDataSaved"></FormArticulos>
            </MudExpansionPanel>
            <MudExpansionPanel Text="Lista Artículos" Expanded="true" Class="fondo-background">
                <TablaArticulos Data="Data" OnArticuloSelected="OnArticuloSelected"></TablaArticulos>
            </MudExpansionPanel>
        </MudExpansionPanels>
	</MudCardContent>
</MudCard>