@inherits EngramaPage




@page "/PageApartados"
@using InventarioEngrama.PWA.Areas.InventarioArea.Componentes



<MudCard>
	<MudCardHeader>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Pedidos</MudText>
		</CardHeaderContent>
		<CardHeaderActions>
			@if (ShowNewApartado || ShowEditApartado)
			{
				<MudButton Variant="Variant.Filled"
						   Color="Color.Secondary" OnClick="OnClickCambiarPantalla">
					Lista Apartados
				</MudButton>
			}
			else
			{
				<MudButton Variant="Variant.Filled"
						   Color="Color.Secondary" OnClick="OnClickAddApartado">
					Agregar nuevo Apartado
				</MudButton>
			}
		</CardHeaderActions>
	</MudCardHeader>
	<MudCardContent>

		@if (ShowNewApartado)
		{
			<GridApartado Data="Data" EC_ApartadorSaved="OnClickCambiarPantalla"></GridApartado>
		}

		@if (ShowTablaApartado)
		{
			<TablaApartados Data="Data" EC_ApartadoSelected="EC_ApartadoSelected"></TablaApartados>
		}

		@if (ShowEditApartado)
		{
			<EditApartado Data="@Data"></EditApartado>
		}
	</MudCardContent>
</MudCard>